{   
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "js": true
        }        
    },
    "rules": {
        "comma-dangle": ["off", "always-multiline"],
        "semi": 1,
        "babel/new-cap": 1,
        "babel/no-invalid-this": 1
    },
    "extends": [
        "plugin:flowtype/recommended"
    ], 
    "plugins": [
        "babel",
        "flowtype"
    ]
}